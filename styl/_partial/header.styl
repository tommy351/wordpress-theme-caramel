#header
  width: sidebar-width
  float: left
  padding: 100px 30px 100px 0

#logo
  color: color-highlight
  font-weight: bold
  font-size: 1.5em
  text-decoration: none
  line-height: line-height-title

#tagline
  margin-top: 20px
  line-height: line-height

#main-nav
  margin-top: 30px
  a
    color: color-highlight
    text-decoration: none
    font-weight: bold
    display: block
    line-height: line-height-title
    margin-bottom: 0.6em

#search-form
  margin-top: 30px

#search-form-input
  color: color-text
  background: darken(color-background, 5%)
  border: none
  width: 100%
  border-radius: 15px
  padding: 7px 15px
  font-size: 0.9em
  font-family: font-sans
  outline: none
  transition: background 0.2s
  &:focus
    background: darken(color-background, 10%)

#banner
  padding-bottom: 100px
  position: relative

#banner-img
  border-radius: 5px
  background-position: center
  background-size: cover
  background-color: darken(color-background, 5%)